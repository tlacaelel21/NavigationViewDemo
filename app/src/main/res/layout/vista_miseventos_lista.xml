<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Principal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:background="@color/fondo_blanco">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1">
                <TextView
                    android:id="@+id/nombre1"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre evento I"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_weight="0.35"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:id="@+id/nombre2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación del evento, MÉX"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Solicitado"
                android:id="@+id/textView13"
                android:layout_weight="0.67"
                android:gravity="center"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/menu_modal_clear"
                android:background="@color/fondo_blanco"
                android:layout_marginTop="15dp"
                android:id="@+id/imageButton1" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:background="@color/fondo_blanco">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1">
                <TextView
                    android:id="@+id/nombre1B"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre evento I"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_weight="0.35"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:id="@+id/nombre2B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación del evento, MÉX"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pagado"
                android:id="@+id/textView13B"
                android:layout_weight="0.67"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewB"
                android:src="@drawable/menu_modal_clear"
                android:layout_gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:background="@color/fondo_blanco">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1">
                <TextView
                    android:id="@+id/nombre1C"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre evento I"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_weight="0.35"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:id="@+id/nombre2C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación del evento, MÉX"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Confirmado"
                android:id="@+id/textView13C"
                android:layout_weight="0.67"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewC"
                android:src="@drawable/menu_modal_clear"
                android:layout_gravity="center"
                />

        </LinearLayout>


    </LinearLayout>


</ScrollView>