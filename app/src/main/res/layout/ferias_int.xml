<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/liston_ferias_int"
        android:weightSum="1">
        <TextView
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textView9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/head_international_st" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ferias Internacionales"
            android:id="@+id/textView"
            android:textSize="24dip"
            android:textColor="#FFFFFF"
            android:layout_weight="0.91"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/event_list">

        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textView5" />

        <TextView
            android:id="@+id/textSeparator"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="Julio, 2015"
            android:visibility="visible"
            android:layout_width="130dp"
            android:textColor="#898989"
            android:background="#EEEEEE"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textSeparator"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.58" />

        <TextView
            android:id="@+id/textSeparator2"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Fecha"
            android:visibility="visible"
            android:layout_width="55dp"
            android:textColor="#898989"
            android:background="#EEEEEE"
            android:layout_alignTop="@+id/textSeparator2"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_weight="0.09" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:background="@color/liston_ferias_int"
        android:id="@+id/textView8" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listadoFerias"
        android:layout_gravity="center_horizontal" />
    <!--include layout="@layout/vista_ferias_int_lista"/-->

</LinearLayout>