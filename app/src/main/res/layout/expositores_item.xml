<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">
    <ImageView
        android:id="@+id/foto_expositor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/factory"
        android:cropToPadding="true"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nombre_expositor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/foto_expositor"
        android:clickable="true"
        android:text="CDE S.A. de C.V."
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/actividad_expositor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foto_expositor"
        android:layout_alignLeft="@+id/nombre_expositor"
        android:layout_alignRight="@+id/nombre_expositor"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="7dp"
        android:textSize="14dip"
        android:textColor="#000"
        android:text="Restaurantes"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>