<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <TextView
        android:background="@color/cab_encuesta"
        android:drawableLeft="@drawable/head_register_clear"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="@string/encuestas_cab"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <ScrollView
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:text="@string/encuestas_pregunta_1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:background="@drawable/button_policy"
                android:id="@+id/perfil_respuesta"
                android:inputType="textCapWords|textAutoComplete"
                android:hint="@string/perfil_nombre"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:textSize="16dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:text="@string/encuestas_pregunta_2"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_pais"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:id="@+id/spinner_edo"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/perfil_boton_actualizar"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:background="@color/cab_encuesta"
                android:backgroundTint="@color/cab_encuesta"
                android:text="@string/boton_terminar"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>