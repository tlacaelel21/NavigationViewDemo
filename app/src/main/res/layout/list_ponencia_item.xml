<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_ponencia_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noticias_item_titulo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/list_ponencia_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noticias_item_subtitulo"
            android:textSize="14sp"/>

    </LinearLayout>
    
    <LinearLayout
        android:background="@color/default_fondo_img"
        android:contentDescription="@string/noticias_item_cd_boton"
        android:id="@+id/list_noticias_boton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/action_open2_clear"
        android:tint="@color/cab_noticia"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/action_eventview_gray"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/list_ponencia_fecha_ini"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/noticias_item_titulo"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/list_ponencia_fecha_fin"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/noticias_item_subtitulo"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>