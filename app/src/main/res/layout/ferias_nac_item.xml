<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">


        <ImageView
            android:id="@+id/img_tianguis"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/titulo_tianguis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/descripcion_tianguis"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_tianguis"
            android:text="Tianguis turistico"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <TextView
            android:id="@+id/descripcion_tianguis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_tianguis"
            android:layout_alignLeft="@+id/titulo_tianguis"
            android:layout_marginBottom="12dp"
            android:textSize="14dip"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toLeftOf="@+id/ferias_nac_item_link"
            android:layout_toStartOf="@+id/ferias_nac_item_link" />

    <ImageButton
        android:id="@+id/ferias_nac_item_link"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/action_open2_st"
        android:cropToPadding="true"
        android:scaleType="center"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/titulo_tianguis"
        android:layout_alignRight="@+id/titulo_tianguis"
        android:layout_alignEnd="@+id/titulo_tianguis"
        android:layout_marginRight="20dp"
        android:clickable="true"/>


</RelativeLayout>

