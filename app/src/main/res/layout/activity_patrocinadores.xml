<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <TextView
        android:background="@color/cab_patrocinadores"
        android:drawableLeft="@drawable/head_profile_st"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="@string/patrocinadores_cab"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/default_fondo_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/patrocinadores_list_cab_pat"
                android:textColor="@color/texto_separador"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/patrocinadores_list_cab_cita"
                android:textColor="@color/texto_separador"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/patrocinadores_list_cab_enlace"
                android:textColor="@color/texto_separador"/>

        </LinearLayout>

        <View
            android:background="@color/cab_patrocinadores"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/patrocinadores_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/default_fondo_img"
        android:dividerHeight="1dp">

    </ListView>

</LinearLayout>