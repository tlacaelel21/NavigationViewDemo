<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1CA8B8">

    <TextView
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="80dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="30dip"
        android:text="¡Listo!"
        android:id="@+id/textView1"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/foto3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/registered_ok_st"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textSize="18dip"
        android:text="Ya puedes accede a tu cuenta,"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFF"
        android:textSize="18dip"
        android:text="En brevé, recibirás un correo"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFF"
        android:textSize="18dip"
        android:text="confirmando tu registro."
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textSize="18dip"
        android:text="www.visitmexico.com"
        android:textStyle="bold"
        android:id="@+id/textLink"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:text="CONTINUAR"
        android:textColor="#1CA8B8"
        android:textStyle="bold"
        android:textSize="20dip"
        android:layout_marginTop="40dp"
        android:background="@drawable/boton_registrado"
        android:id="@+id/button_registrado"
        android:layout_gravity="center_horizontal" />

</LinearLayout>